{% style %}
  .section-{{ section.id }} {
    background: {{ section.settings.background_color }};
    padding-top: {{ section.settings.section_top_padding }}px;
    padding-bottom: {{ section.settings.section_bottom_padding }}px;
  }
  .section-{{ section.id }} .page-title {
    color: {{ section.settings.title_color }};
    font-family: ClashGrotesk-Variable;
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: 300;
    line-height: {{ section.settings.title_line_height }}px;
    text-align: {{ section.settings.title_alignment }};
    margin-top: {{ section.settings.title_top_padding }}px;
    margin-bottom: {{ section.settings.title_bottom_padding }}px;
  }
  .section-{{ section.id }} .page-card-list {
    display: flex;
    flex-direction: {{ section.settings.block_direction }};
    gap: {{ section.settings.block_spacing }}px;
  }
  .section-{{ section.id }} .page-card {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.padding_between_line_and_icon }}px;
    flex: 1;
  }
  .section-{{ section.id }} .page-card .rich-text-image {
    width: 100%;
  }
  .section-{{ section.id }} .video-container{
    position: relative;
  }
  .section-{{ section.id }} .video-container .video-thumbnail {
    position: absolute;
    object-fit: cover;
  }
  .section-{{ section.id }} .video-container .video-play-button {
    cursor: pointer;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
  }

  @media screen and (max-width: 768px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.section_top_padding_tablet }}px;
      padding-bottom: {{ section.settings.section_bottom_padding_tablet }}px;
    }
  }
  @media screen and (max-width: 480px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.section_top_padding_mobile }}px;
      padding-bottom: {{ section.settings.section_bottom_padding_mobile }}px;
    }
    .section-{{ section.id }} .page-title {
      text-align: {{ section.settings.title_alignment_mobile }};
      font-size: {{ section.settings.title_font_size_mobile }}px;
      line-height: {{ section.settings.title_line_height_mobile }}px;
      margin-top: {{ section.settings.title_top_padding_mobile }}px;
      margin-bottom: {{ section.settings.title_bottom_padding_mobile }}px;
    }
    .section-{{ section.id }} .page-card-list {
      flex-direction: {{ section.settings.block_direction_mobile }};
      gap: {{ section.settings.block_spacing_mobile }}px;
    }
    .section-{{ section.id }} .page-card {
      flex-direction: row;
    }
  }

  .section-{{ section.id }} .video-container {
  position: relative;
  width: 100%;
  overflow: hidden;
}
.section-{{ section.id }} .video-thumbnail-cover {
  position: absolute;
  inset: 0;
}
.section-{{ section.id }} .video-container .video-thumbnail {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
{% endstyle %}

<div class="section-{{ section.id }}">
  <div class="container">
    {% if section.settings.title != blank %}
      <h2 class="page-title" >
        {{ section.settings.title }}
      </h2>
    {% endif %}
    <div class="page-card-list">
    {% for block in section.blocks %}
      {% if forloop.index0 < section.settings.video_count %}
        {% style %}          
          .block-{{ block.id }} .video-container .video-play-icon {
            width: {{ block.settings.icon_width }}px;
          }
          @media screen and (max-width: 768px) {
            .block-{{ block.id }} .video-container .video-play-icon {
              width: {{ block.settings.icon_width_tablet }}px;
            }
          }
          @media screen and (max-width: 480px) {
            .block-{{ block.id }} .video-container .video-play-icon {
              width: {{ block.settings.icon_width_mobile }}px;
            }
          }
        {% endstyle %}
        <div class="block-{{ block.id }} page-card {% if forloop.last %}page-last-card{% endif %}">
          <div class="rich-text-image">            
            {% if block.settings.media_mode == "video" %}
              {%- if block.settings.video != blank -%}
                {%- liquid
                  assign video_preview = block.settings.video.preview_image.src | default: block.settings.video.src
                  assign video = block.settings.video.sources[0]
                  for source in block.settings.video.sources
                    if source.format contains "mp4"
                      assign video = source
                      break
                    endif
                  endfor
                  assign video_url = video.url
                  assign video_width = 476
                  assign video_height = 319
                  assign aspect_ratio = video_width | times: 1.0 | divided_by: video_height
                  unless video_preview contains "/cdn/shop"
                    assign video_preview = video_preview | prepend: "/cdn/shop/"
                  endunless
                -%}
              {%- endif -%}                
            {% else %} {% comment %}url{% endcomment %}
{%- liquid
  assign video_preview = block.settings.video_preview | img_url: '1024x'
  assign raw_url = block.settings.video_url

  assign video_width = 476
  assign video_height = 319
  assign aspect_ratio = video_width | times: 1.0 | divided_by: video_height

  assign is_yt = false
  assign yt_id = ''

  if raw_url contains 'youtu.be/'
    assign yt_id = raw_url | split: 'youtu.be/' | last | split: '?' | first
    assign is_yt = true
  elsif raw_url contains 'watch?v='
    assign yt_id = raw_url | split: 'v=' | last | split: '&' | first
    assign is_yt = true
  elsif raw_url contains 'youtube.com/embed/'
    assign yt_id = raw_url | split: 'embed/' | last | split: '?' | first
    assign is_yt = true
  endif

  if is_yt
    assign video_url = 'https://www.youtube-nocookie.com/embed/' | append: yt_id
    assign autoplay_url = video_url | append: '?autoplay=1&mute=1&playsinline=1&rel=0&modestbranding=1'
  else
    assign video_url = raw_url
    assign autoplay_url = raw_url
  endif
-%}

            {% endif %}

            <div class="video-container" style="aspect-ratio: {{ aspect_ratio }};">
              <div class="video-thumbnail-cover">
                <div class="video-play-button">
                  <img src="{{ block.settings.play_icon | img_url: '80x', format: 'pjpg' }}" width="80px" height="80px">
                </div>
                <img
                  class="video-thumbnail"
                  src="{{ video_preview }}"
                  width="100%"
                  height="auto"
                  style="aspect-ratio: {{ aspect_ratio }}"
                  loading="lazy"
                >
              </div>
              {% if block.settings.media_mode == "video" %}
                <video
                  class="video-player"
                  src="{{ video_url }}"
                  poster="{{ video_preview }}"
                  data-video-source="{{ video_url }}"
                  content="video/mp4"
                  playsinline
                  width="100%">
                  <source src="{{ video_url }}" type="video/mp4" width="{{ video_width }}px" height="{{ video_height }}px">
                </video>
              {% else %}
<iframe 
  class="video-player"
  style="aspect-ratio: {{ aspect_ratio }}"
  src="about:blank"
  data-play-src="{{ autoplay_url }}"
  data-video-source="{{ video_url }}"
  width="100%"
  height="auto"
  frameborder="0"
  allow="autoplay; encrypted-media; picture-in-picture"
  allowfullscreen
  loading="lazy">
</iframe>


              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const scope = document.querySelector(".section-{{ section.id }}");
    if (!scope) return;

    // Hjälpfunktion: återställ ett containerkort
    function resetContainer(c) {
      const p = c.querySelector(".video-player");
      const thumb = c.querySelector(".video-thumbnail-cover");
      if (!p || !thumb) return;

      if (p.tagName === "IFRAME") {
        // Töm iframe så inget YouTube skräp ligger och tuggar
        p.setAttribute("src", "about:blank");
      } else {
        try { p.pause(); } catch(e){}
        p.currentTime = 0;
        p.removeAttribute('src'); // frigör ev. buffrad ström
        p.load();
      }
      thumb.style.display = "block";
    }

    scope.querySelectorAll(".video-container").forEach(container => {
      const player = container.querySelector(".video-player");
      const thumb = container.querySelector(".video-thumbnail-cover");
      const playBtn = container.querySelector(".video-play-button");
      if (!player || !thumb || !playBtn) return;

      playBtn.addEventListener("click", function () {
        // 1) Återställ ALLA andra kort
        scope.querySelectorAll(".video-container").forEach(c => {
          if (c !== container) resetContainer(c);
        });

        // 2) Starta den klickade
        thumb.style.display = "none";

if (player.tagName === "IFRAME") {
  // Använd helst data-play-src (redan korrekt byggd i Liquid)
  let url = player.getAttribute("data-play-src");
  if (!url) {
    // Fallback: bygg från data-video-source om data-play-src saknas
    url = player.getAttribute("data-video-source") || "";
    if (url) {
      const hasQuery = url.indexOf("?") > -1;
      const tail = "autoplay=1&mute=1&playsinline=1&rel=0&modestbranding=1";
      url = url + (hasQuery ? "&" : "?") + tail;
    }
  }
  if (url) {
    url = url.replace("https://www.youtube.com/embed/", "https://www.youtube-nocookie.com/embed/");
    player.setAttribute("src", url);
  }
} else {
  try { player.currentTime = 0; } catch(e){}
  player.loop = true;
  player.play();
}

</script>


