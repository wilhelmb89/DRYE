{%- assign ss = section.settings -%}
<style>

 /* DRYE: Footer länkar – samma stil som brödtext, utan pilar */
footer .menu a,
footer .menu a * {
  font-family: Inter, sans-serif !important;
  font-weight: 400 !important;
  font-variation-settings: "wght" 400 !important;
  color: rgba(255, 255, 255, 0.65) !important; /* lite mörkare än #fff */
  letter-spacing: -0.04em !important;
  line-height: 24px !important;
  font-size: 16px !important;
  text-decoration: none; /* ta bort ev. underline */
}

footer .menu a:hover {
  color: rgba(255, 255, 255, 0.85) !important; /* ljusare vid hover */
}
/* DRYE: Newsletter text i footern – matcha länkarna */
footer .email-content p,
footer .email-content p * {
  font-family: Inter, sans-serif !important;
  font-weight: 400 !important;
  font-variation-settings: "wght" 400 !important;
  color: rgba(255, 255, 255, 0.65) !important;  /* samma som länkarna */
  letter-spacing: -0.04em !important;
  line-height: 24px !important;
  font-size: 16px !important;
}


/* Ta bort små pilar från footer-menytitlar */
footer .menu .title::after,
footer .menu .title::before {
  display: none !important;
  content: none !important;
}



  .footer-section .container .menu-area .menu-wrapper .menu .title .title-accordion-icon {
    display: none;
  }
  @media (min-width: 1025px) {
    .footer-section .container .menu-area .social-block .social-block-logo {
      display: flex;
      flex-direction: column;
      gap: 30px;
    }
  }
  @media (min-width: 1025px) and (max-width: 1440px) {
    .footer-section .container .menu-area {
      flex-wrap: nowrap;
    }
    .footer-section .container .menu-area .social-block {
      width: 100%;
    }
    .footer-section .container .menu-area .email {
      width: 100%;
    }
    .footer-section .container .menu-area .menu-wrapper {
      gap: unset;
      justify-content: space-evenly;
      width: 100%;
    }
  }
  @media (min-width: 768px) and (max-width: 1024px) {
    .footer-section .container .menu-area {
      gap: 40px;
    }
    .footer-section .container .menu-area .menu-wrapper {
      width: 100%;
    }
    .footer-section .container .menu-area .social-block {
      max-width: 100%;
      width: 100%;
      flex-direction: row;
    }
    .footer-section .container .menu-area .social-block .social-block-logo {
      flex: 1.1;
      display: flex;
      flex-direction: column;
      gap: 30px;
    }
    .footer-section .container .menu-area .social-block .socials {
      flex: 0.9;
      justify-content: flex-end;
    }
    .footer-section .container .menu-area .social-block .socials a {
      display: flex;
      justify-content: end;
      align-items: end;
    }
    .footer-section .container .menu-area .email {
      max-width: 100%;
      width: 100%;
    }
    .footer-section .container .menu-area .email .email-box {
      display: flex;
      justify-content: space-between;
    }
    .footer-section .container .menu-area .email .email-content {
      flex: 0.75;
    }
    .footer-section .container .menu-area .email form {
      max-height: 60px;
    }
  }
  @media screen and (max-width: 767px) {
    .footer-section .container .menu-area .menu-wrapper {
      display: flex;
      flex-direction: column;
      gap: 24px;
    }
    .footer-section .container .menu-area .menu-wrapper .menu {
      border-bottom: solid 1px #fff;
      padding: 0 0 8px;
      gap: 16px;
    }
    .footer-section .container .menu-area .menu-wrapper .menu .submenu {
      display: none;
    }
    .footer-section .container .menu-area .menu-wrapper .menu.open .submenu {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      align-self: stretch;
      gap: 0;
    }
    .footer-section .container .menu-area .menu-wrapper .menu .title {
      display: flex;
      justify-content: space-between;
      line-height: 20px;
    }
    .footer-section .container .menu-area .menu-wrapper .menu .title .title-accordion-icon {
      display: flex;
    }
    .footer-section .container .menu-area .menu-wrapper .menu .title .title-accordion-icon svg {
      transition: transform 0.3s ease-in-out;
    }
    .footer-section .container .menu-area .menu-wrapper .menu.open .title .title-accordion-icon svg {
      transform: rotate(180deg);
    }
    .footer-section .container .menu-area .social-block .social-block-logo {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
  }
</style>
<div class="container" id="inverseHeader" data-inversed="false">
  <div class="top">
    {%- if ss.image1 or ss.image2 -%}
      <div class="images">
        {%- if ss.image1 -%}
          <div class="image">
            {{ ss.image1 | image_url: width: '320' | image_tag: loading: 'lazy' }}
          </div>
        {%- endif -%}
        {%- if ss.image2 -%}
          <div class="image">
            {{ ss.image2 | image_url: width: '320' | image_tag: loading: 'lazy' }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
    {%- if ss.title != blank -%}
      <div class="title">
        <h2 class="footer-title">
          {{ ss.title }}
        </h2>
        {%- if ss.button_text != blank -%}
          <a href="{{ ss.button_url }}" class="button secondary">{{ ss.button_text }}</a>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>

  {%- if section.blocks.size > 0 -%}
    <div class="menu-area">
      <div class="footer-menu__left">
          {%- for block in section.blocks -%}
            {%- assign bs = block.settings -%}
          {%- case block.type -%}
            {%- when 'share' -%}
              <div class="social-block">
                <div class="social-block-logo">
                  {%- if bs.logo != blank -%}
                    <div class="logo">
                      {{ bs.logo | image_url: width: '100' | image_tag: loading: 'lazy' }}
                    </div>
                  {%- endif -%}
                  {%- if bs.content -%}
                    <div class="content">
                      {{ bs.content }}
                    </div>
                  {%- endif -%}
                </div>
                <div class="socials">
                  {%- if settings.pinterest != blank -%}
                    <a target="_blank" title="pinterest" href="{{ settings.pinterest }}" class="social">
                      {%- render 'icon', type: 'pinterest' -%}
                    </a>
                  {%- endif -%}
                  {%- if settings.facebook != blank -%}
                    <a target="_blank" title="facebook" href="{{ settings.facebook }}" class="social">
                      {%- render 'icon', type: 'facebook' -%}
                    </a>
                  {%- endif -%}
                  {%- if settings.instagram != blank -%}
                    <a target="_blank" title="instagram" href="{{ settings.instagram }}" class="social">
                      {%- render 'icon', type: 'instagram' -%}
                    </a>
                  {%- endif -%}
                  {%- if settings.twitter != blank -%}
                    <a target="_blank" title="twitter" href="{{ settings.twitter }}" class="social">
                      {%- render 'icon', type: 'twitter' -%}
                    </a>
                  {%- endif -%}
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
        </div>

        <div class="footer-menu__right">
          {%- for block in section.blocks -%}
            {%- assign bs = block.settings -%}
          {%- case block.type -%}
            {%- when 'menu' -%}
              <div class="menu-wrapper">
                {%- for link in bs.menu.links -%}
                  <div class="menu">
                    <div class="title">
                      <span>{{ link.title }}</span>
                      <div class="title-accordion-icon">
                        <svg width="14" height="8" viewBox="0 0 14 8" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="chevron open" role="img" class="chevron-open"><path d="M7.11098 5.15691L2.16098 0.206909L0.746979 1.62091L7.11098 7.98491L13.475 1.62091L12.061 0.206911L7.11098 5.15691Z" fill="white"></path></svg>
                      </div>
                    </div>
                    <div class="submenu">
                      {%- for child in link.links -%}
                        <a href="{{ child.url }}" class="link">{{ child.title }}</a>
                      {%- endfor -%}
                    </div>
                  </div>
                {%- endfor -%}
              </div>
  
            {%- when 'email' -%}
              <div class="email">
                {%- if bs.title != blank -%}
                  <div class="title">{{ bs.title }}</div>
                {%- endif -%}
                <div class="email-box">
                  {%- if bs.content != blank -%}
                    <div class="email-content">{{ bs.content }}</div>
                  {%- endif -%}
                  {%- form 'customer', id: 'footer-newsletter', class: 'email-form' -%}
                    {%- if form.posted_successfully? -%}
                      {{ 'newsletter.subscribed_successfully' | t }}
                    {%- else -%}
                      {%- if form.errors -%}
                        {{ form.errors.translated_fields['email'] }} 
                        {{ form.errors.messages['email'] }}                    
                      {%- endif -%}
    
                      <input type="hidden" name="contact[tags]" value="newsletter">
                      <input class="email-input" type="email" name="contact[email]" id="email" required placeholder="{{ bs.placeholder }}">
                      <button type="submit">{{ bs.button_text }}</button>
    
                    {%- endif -%}
                  {%- endform -%}
                </div>
              </div>
            {%- endcase -%}
          {% endfor %}
        </div>

    </div>
  {%- endif -%}
  <div class="bottom">
    {%- if ss.copy != blank -%}
      {{ ss.copy }}
    {%- endif -%}
    {%- if ss.privacy != blank -%}
      <div class="privacy">
        {%- for link in ss.privacy.links -%}
          <a href="{{ link.url }}" class="privacy-link">{{ link.title }}</a>
          {%- if forloop.last -%}
          
            {%- else -%}
              <div class="dot"></div>
            {%- endif -%}
        {%- endfor -%}
        
      </div>
    {%- endif -%}
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.footer-section .container .menu-area .title').forEach(button => {
      button.addEventListener('click', () => {
        const parentMenu = button.closest('.menu');
        parentMenu.classList.toggle('open');
      });
    });
  });
</script>
