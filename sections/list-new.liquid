{%- assign ss = section.settings -%}

<style>
  #shopify-section-{{ section.id }} {
  margin-block: {{ ss.m_top }}px {{ ss.m_bottom }}px;
}
@media screen and (max-width: 767px) {
  #shopify-section-{{ section.id }} {
    margin-block: {{ ss.mobile_m_top }}px {{ ss.mobile_m_bottom }}px;
  }
}




/* behåll layouten för listpunkterna */
#shopify-section-{{ section.id }} .list .list-item {
  display: flex;
  align-items: center;
}

  @media screen and (min-width: 1441px) {
    #shopify-section-{{ section.id }} .title {
      font-size: {{ section.settings.title_font_size_desktop }}px;
      line-height: {{ section.settings.title_line_height_desktop }}px;
    }
    #shopify-section-{{ section.id }} .list .list-item {
      font-size: {{ section.settings.list_item_font_size_desktop }}px;
      line-height: {{ section.settings.list_item_line_height_desktop }}px;
    }
    #shopify-section-{{ section.id }} .content .text {
      font-size: {{ section.settings.content_font_size_desktop }}px;      
      line-height: {{ section.settings.content_line_height_desktop }}px;
    }
  }
  @media (min-width: 1025px) and (max-width: 1440px) {
    #shopify-section-{{ section.id }} .title {
      font-size: {{ section.settings.title_font_size_small_desktop }}px;
      line-height: {{ section.settings.title_line_height_small_desktop }}px;
    }
    #shopify-section-{{ section.id }} .list .list-item {
      font-size: {{ section.settings.list_item_font_size_desktop }}px;
      line-height: {{ section.settings.list_item_line_height_desktop }}px;
    }
    #shopify-section-{{ section.id }} .content .text {
      font-size: {{ section.settings.content_font_size_small_desktop }}px;      
      line-height: {{ section.settings.content_line_height_small_desktop }}px;
    }
}
  }
  @media (min-width: 768px) and (max-width: 1024px) {
    #shopify-section-{{ section.id }} .title {
      font-size: {{ section.settings.title_font_size_tablet }}px;
      line-height: {{ section.settings.title_line_height_tablet }}px;
      margin-bottom: 60px;
    }
    #shopify-section-{{ section.id }} .list .list-item {
      font-size: {{ section.settings.list_item_font_size_tablet }}px;
      line-height: {{ section.settings.list_item_line_height_tablet }}px;
    }
    #shopify-section-{{ section.id }} .content .text {
      font-size: {{ section.settings.content_font_size_tablet }}px;      
      line-height: {{ section.settings.content_line_height_tablet }}px;
    }
}
  }
  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} .container.small {
      gap: 8px;
    }
    #shopify-section-{{ section.id }} .container .content {
      gap: 44px;
    }
    #shopify-section-{{ section.id }} .title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      line-height: {{ section.settings.title_line_height_mobile }}px;
    }
    #shopify-section-{{ section.id }} .list .list-item {
      font-size: {{ section.settings.list_item_font_size_mobile }}px;      
      line-height: {{ section.settings.list_item_line_height_mobile }}px;
    }
    #shopify-section-{{ section.id }} .content .text {
      font-size: {{ section.settings.content_font_size_mobile }}px;      
      line-height: {{ section.settings.content_line_height_mobile }}px;
    }
}
/* Match Multirows text styling */
#shopify-section-{{ section.id }} .list .list-item,
#shopify-section-{{ section.id }} .content .text,
#shopify-section-{{ section.id }} .list .list-item *:not(svg):not(path),
#shopify-section-{{ section.id }} .content .text *:not(svg):not(path) {
  font-family: var(--font-body-family, Inter, sans-serif) !important;
  font-weight: 400 !important;
  font-variation-settings: "wght" 400 !important;
  font-synthesis-weight: none;
  font-size: 18px !important;
  line-height: 28px !important;
  letter-spacing: -0.04em;
  color: rgb(17 17 17 / 65%) !important; /* ger samma grå som Multirow */
}


#shopify-section-{{ section.id }} .image { margin-bottom: 34px; }
/* Mobil-override: 16/24 på list + brödtext */
@media screen and (max-width: 767px) {
  #shopify-section-{{ section.id }} .list .list-item,
  #shopify-section-{{ section.id }} .content .text,
  #shopify-section-{{ section.id }} .list .list-item *:not(svg):not(path),
  #shopify-section-{{ section.id }} .content .text *:not(svg):not(path) {
    font-size: 16px !important;
    line-height: 24px !important;
  }
}


</style>


<div class="container small my">
  {%- if ss.title != blank -%}
    <h2 class="title">
      {{ ss.title }}
    </h2>
  {%- endif -%}
  <div class="content">

    {%- if ss.image -%}
      <div class="image">
        {{ ss.image | image_url: width: '600' | image_tag: loading: 'lazy' }}
      </div>
    {%- endif -%}
      <div class="list-wrapper">
        {%- if section.blocks.size > 0 -%}
          <div class="list">
            {%- for block in section.blocks -%}
              <div class="list-item">
                {%- render 'icon', type: 'checkbox' -%}
                {{ block.settings.title }}
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}
        {%- if ss.content != blank -%}
          <div class="text">
            {{ ss.content }}
          </div>
        {%- endif -%}
        {%- if ss.button_text != blank -%}
          <a href="{{ ss.button_url }}" class="button">
            {{ ss.button_text }}
            {%- render 'icon', type: 'arrow-right' -%}
          </a>
        {%- endif -%}
      </div>
  </div>
</div>

