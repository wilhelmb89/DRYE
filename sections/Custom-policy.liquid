{% assign ss = section.settings %}
<style>
  #shopify-section-{{ section.id }} .custom-policy {
    max-width: 720px; margin: 0 auto; padding: 40px 20px;
  }
  #shopify-section-{{ section.id }} .custom-policy h2,
  #shopify-section-{{ section.id }} .custom-policy p {
    font-family: var(--font-body-family, Inter, sans-serif);
    font-weight: 400;
    font-variation-settings: "wght" 400;
    letter-spacing: -0.04em;
    color: rgb(17 17 17 / 65%);
    margin: 0;
  }
  #shopify-section-{{ section.id }} .custom-policy h2 {
    font-family: "Clash Grotesk", var(--font-heading-family, Inter, sans-serif);
    font-weight: 300;
    font-size: 32px; line-height: 36px; margin-bottom: 12px;
  }
  #shopify-section-{{ section.id }} .custom-policy p {
    font-size: 16px; line-height: 24px; white-space: pre-line;
  }
  @media (max-width: 767px){
    #shopify-section-{{ section.id }} .custom-policy { padding: 28px 16px; }
    #shopify-section-{{ section.id }} .custom-policy h2 { font-size: 28px; line-height: 32px; }
  }
</style>

<div class="custom-policy">
  {% if ss.heading != blank %}<h2>{{ ss.heading }}</h2>{% endif %}
  {% if ss.description != blank %}<p>{{ ss.description }}</p>{% endif %}
</div>

{% schema %}
{
  "name": "Custom Heading + Text",
  "tag": "section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "30-Day Money-Back Guarantee" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "If you're not satisfied, you can return your gloves within 30 days of delivery. No hassle â€” just contact us, and we'll take care of it." }
  ],
  "presets": [{ "name": "Custom Heading + Text" }]
}
{% endschema %}
