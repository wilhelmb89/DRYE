<style>
  #shopify-section-{{ section.id }} {
    li {
      color: #6b6b69;
      font-family:"Inter", sans-serif;
      font-size: 18px;
      font-weight: 400;
      line-height: 28px;
      letter-spacing: -.04em;
      text-align: left;
      @media screen and (max-width: 767px) {
        font-size: 16px;
      }
    }
    strong {
      font-weight: 600;
    }
    .container {
  max-width: 980px;

  p {
    font-family: var(--font-body-family, "Inter", sans-serif) !important;
    font-weight: 400 !important;
    font-variation-settings: "wght" 400 !important;
    font-synthesis-weight: none;
    line-height: 28px;
    letter-spacing: -0.2px;

    a {
      line-height: 27px;
    }
  }
}

  }
  #shopify-section-{{ section.id }} ul {
    list-style: disc;
    padding-left: 40px;
    margin-block: 1rem;    
  }
  #shopify-section-{{ section.id }} ol {
    list-style: decimal;
    padding-left: 40px;
    margin-block: 1rem;
  }
  /* Tvinga rubriker i artikeln till Clash Grotesk Light (300) */
#shopify-section-{{ section.id }} .container h2,
#shopify-section-{{ section.id }} .container h3 {
  font-family: 'ClashGrotesk-Variable', 'Clash Grotesk', sans-serif !important;
  font-weight: 300 !important;
  font-variation-settings: "wght" 300 !important; /* om variabel font */
  font-synthesis-weight: none;
  letter-spacing: 0;
  line-height: normal;
}

/* H2 behåller storleken från inställningen */
#shopify-section-{{ section.id }} .container h2 {
  font-size: {{ section.settings.title_font_size }}px !important;
}

/* (Valfritt) sätt en rimlig storlek för H3 om du vill ha den mindre */
#shopify-section-{{ section.id }} .container h3 {
  font-size: calc({{ section.settings.title_font_size }}px * 0.75);
}

  @media screen and (min-width: 1025px) {
    #shopify-section-{{ section.id }} .container {
      padding-inline: 65px;
    }
  }
  @media screen and (max-width: 767px) {    
    #shopify-section-{{ section.id }} .container iframe {
      width: 100%;
      height: auto;
      aspect-ratio: calc(560 / 315);
    }
  }
</style>

<div class="container medium">
  {{ article.content }}
  {%- if article.tags.size > 0 -%}
    <div class="tags-title">Tags</div>
    <div class="tags">
      {%- for tag in article.tags -%}
        <div class="tag">{{ tag }}</div>
      {%- endfor -%}
    </div>
  {%- endif -%}
</div>

{% schema %}
  {
    "name": "Article(New)",
    "tag": "section",
    "class": "main-article",
    "settings": [
      {
        "type": "image_picker",
        "id": "ul_marker",
        "label": "List marker"
      },
      {
        "type": "header",
        "content": "Title Settings"
      },
      {
        "type": "range",
        "id": "title_font_size",
        "label": "Title Font Size",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 32,
        "unit": "px"
      }
    ],
    "presets": [
      {
        "name": "Article(New)",
        "settings": {

        }
      }
    ]
  }
{% endschema %}
