<div class="section-{{ section.id }} section-{{ section.id }}-padding">
  <div class="container">
    <div class="product-reviews-header">
      {% for block in section.blocks %}
        {% if block.type == "title" %}
          {% style %}            
            .block-{{ block.id }} .page-title{
              font-family: "ClashGrotesk-Variable";
              font-size: {{ block.settings.title_font_size }}px;
              font-weight: 300;
              line-height: {{ block.settings.title_line_height }}px;
              color: {{ block.settings.title_color }};
              text-align: {{ block.settings.title_alignment }};
            }
            @media screen and (max-width: 480px) {
              .section-{{ section.id }} .page-title{
                font-size: {{ block.settings.title_font_size_mobile }}px;
                line-height: {{ block.settings.title_line_height_mobile }}px;
                margin-bottom: {{ block.settings.title_bottom_padding_mobile }}px;
              }
            }
          {% endstyle %}
          <div class="block-{{ block.id }}">
          {% if block.settings.title != blank %}            
            <h2 class="page-title" >
              {{ block.settings.title }}
            </h2>
          {% endif %}
          </div>
        {% endif %}
      {% endfor %}
      <div class="reviews-toolbar">
      {% for block in section.blocks %}
        {% if block.type == "@app" %}          
          <div class="reviews-star-ratings">
            {%- render block -%}
          </div>
        {% elsif block.type == "ratings" %}
          {% style %}
            .reviews-stars-ratings .reviews-ratings{
              color: #111111;
              font-size: {{ block.settings.score_font_size }}px;
              font-weight: 400;
              {% if block.settings.score_line_height == 0 %}
              line-height: normal;
              {% else %}
              line-height: {{ block.settings.score_line_height }}px;
              {% endif %}
              margin-right: {{ block.settings.score_padding_right }}px;
            }
            .reviews-stars-ratings .reviews-stars-count {
              margin-right: {{ block.settings.count_padding_right }}px;
            }
            .reviews-stars-ratings .reviews-stars-count .reviews-stars {
              color: #111111;
              font-family: Roboto;
              font-size: {{ block.settings.count_font_size }}px;
              font-weight: 400;
              {% if block.settings.count_line_height == 0 %}
              line-height: normal;
              {% else %}
              line-height: {{ block.settings.count_line_height }}px;
              {% endif %}
            }
            .reviews-stars-ratings .reviews-stars-count .reviews-count {
              
            }
          {% endstyle %}
          <div class="reviews-stars-ratings">
            <h2 class="reviews-ratings"></h2>
            <div class="reviews-stars-count">
              <div class="reviews-stars">
                {% for i in (1..5) %}
                  <img
                  class="page-card-icon"
