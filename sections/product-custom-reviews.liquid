            {{ block.settings.title }}
          </div>
        {% endif %}
      {% endfor %}
      </div>
    </div>
  </div>
  <swiper-container class="product-custom-reviews" init="false">
  </swiper-container>
  <div class="swiper-pagination"></div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const profileImages = [
      {%- for block in profile_blocks -%}
        "{{ block.settings.profile_image | img_url: '51x' }}"{% unless forloop.last %},{% endunless %}
      {%- endfor -%}
    ];
    const defaultProfileImg = "{{ default_profile_img }}"; 
    const appKey = "{{ settings.yotpo_reviews_api_key }}";
  
    async function fetchAllReviews(page = 1, allReviews = []) {
      const url = `https://api.yotpo.com/v1/widget/${appKey}/reviews?page=${page}`;
      console.log('fetchAllReviews = ', page, allReviews);
  
      try {
        const response = await fetch(url);
        const res = await response.json();
        const data = res.response;
        // console.log('res = ', res);
        // console.log('data = ', data);
  
        if (data.reviews && data.reviews.length > 0) {
          allReviews = allReviews.concat(data.reviews);
          console.log(`Fetched ${data.reviews.length} reviews from page ${page}`);

          const totalReviews = data.pagination.total;
          const totalFetched = allReviews.length;
          
          if (totalFetched < totalReviews) {
            return fetchAllReviews(page + 1, allReviews); // Fetch next page
          } else {
            const totalScore = data.bottomline.average_score.toFixed(1);
            const reviewsCount = data.bottomline.total_review;
            document.querySelector(".reviews-stars-ratings .reviews-count").innerHTML = `${reviewsCount}`;
            displayTotalStar(totalScore);
          }
        }
  
        return allReviews;
      } catch (error) {
        console.error("Error fetching Yotpo reviews:", error);
        return allReviews;
      }
    }
  
    async function loadReviews() {
      const allReviews = await fetchAllReviews();
      console.log(`Total Reviews Fetched: ${allReviews.length}`);
      displayReviews(allReviews);
      initSlider();
      document.querySelector(".section-{{ section.id }}").style.display = 'block';
    }

    function initSlider() {
      const sliders = document.querySelectorAll('.product-custom-reviews');
      sliders.forEach(slider => {
        const swiperParams = {
          spaceBetween: 20,
          centeredSlides: false,
          loop: false,
          slidesPerView: 'auto',
          pagination: {
            el: ".swiper-pagination",
            clickable: true,
            dynamicBullets: true
          },
          breakpoints: {
            1150: {
              slidesPerView: 3,
              spaceBetween: 24,
            },
            768: {
               slidesPerView: 2,
               spaceBetween: 24,
            },
            0: {
               slidesPerView: 1
            }
          }
        };
        Object.assign(slider, swiperParams);
        slider.initialize();
      });
    }

    function displayTotalStar(totalScore) {
      const roundedScore = Math.round(totalScore);
      document.querySelector(".reviews-stars-ratings .reviews-ratings").innerHTML = `${totalScore}`;
      
    }
  
    function displayReviews(reviews) {
      const reviewContainer = document.querySelector(".product-custom-reviews");
      let reviewContainerHTML = "";
      reviewContainer.innerHTML = "";
  
      reviews.forEach((review, index) => {
        let reviewItem = `
          <swiper-slide>
          <div class="person-review">
            <div class="author-info">
              <div class="author-profile">
                <div class="author-profile-img">`;
        if (review.user.social_image === null) {
          let profileImg = profileImages[index] ? profileImages[index] : defaultProfileImg;
          if (profileImg.includes("no-image-")) {
            profileImg = defaultProfileImg;
          }
          reviewItem += `
            <img
              class="person-profile-icon"
              src="${profileImg}"
              width="51px"
              height="auto"/>
          `;
        } else {
          reviewItem += `
            <img
              class="person-profile-icon"
              src="${review.user.social_image}"
              width="51px"
              height="auto"/>
          `;
        }
        reviewItem += `
                </div>
                <div class="author-name-status">
                  <div class="author-name">${review.user.display_name}</div>
                  <div class="author-status">
                    <span>Verified Buyer</span>
                    <img
                      class="person-profile-icon"
                      src="{{ section.settings.verifed_buyer_icon | img_url: '17x' }}"
                      width="17px"
                      height="auto"/>
                  </div>
                </div>
              </div>
              <div class="author-ratings-date">
                <div class="author-stars-ratings">
                  <div class="author-stars">`;
        for (i = 0; i < review.score; i++) {
          reviewItem += `
            <img
              class="person-review-icon"
              src="{{ section.settings.review_star_success | img_url: '18x' }}"
              width="18px"
              height="auto"/>
          `;
        }
        for (i = 0; i < 5 - review.score; i++) {
          reviewItem += `
            <img
              class="person-review-icon"
              src="{{ section.settings.review_star_fail | img_url: '18x' }}"
              width="18px"
              height="auto"/>
          `;
        }
        reviewItem += `
                  </div>
                  <div class="author-ratings">${review.score}</div>
                </div>
                <div class="author-date">${new Date(review.created_at).toLocaleDateString()}</div>
              </div>
            </div>
            <div class="person-review-tags">`;
        let reviewTags = "{{ section.settings.review_tags }}";
        let tagArray = reviewTags.split("|");
        for (let i = 0; i < tagArray.length; i++) {
          reviewItem += `<div class="person-review-tag">${tagArray[i]}</div>`;
        }        
        reviewItem += `
            </div>
            <div class="person-review-title">${review.title}</div>
            <div class="person-review-content">${review.content}</div>
          </div>
          </swiper-slide>
        `;
        reviewContainerHTML += reviewItem;
      });
      reviewContainer.innerHTML = `
          ${reviewContainerHTML}
      `;
    }

    document.querySelector(".reviews-write-button").addEventListener("click", function() {
      let checkButton = setInterval(() => {
        let yotpoWriteButton = document.querySelector("#yotpo-main-widget-btn");
        if (yotpoWriteButton) {
            clearInterval(checkButton);
            yotpoWriteButton.click();
        }
      }, 500);
    });

    loadReviews();
  });
</script>

