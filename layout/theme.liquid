  const ready = () => typeof window.TriplePixel === 'function';
  const queue = []; let waitTimer=null, waitStart=0;

  function flushQueue(){
    if (!ready()) return;
    while(queue.length){
      const {name, payload, ts} = queue.shift();
      try { window.TriplePixel(name, payload); debugPanelPush({ dir:'→', name, payload, note:'flushed', ts }); log.info('Sent', name, payload); }
      catch(e){ log.error('TriplePixel threw', e); }
    }
    if (waitTimer){ clearInterval(waitTimer); waitTimer=null; }
  }

  function sendPixel(name, payload){
    if (ready()){
      try { window.TriplePixel(name, payload); debugPanelPush({ dir:'→', name, payload }); log.info('Sent', name, payload); }
      catch(e){ log.error('TriplePixel threw', e); }
      return;
    }
    queue.push({ name, payload, ts: Date.now() });
    debugPanelPush({ dir:'Q', name, payload, note:'queued' });
    if (!waitTimer){
      waitStart = Date.now();
      waitTimer = setInterval(() => {
        if (ready() || Date.now() - waitStart > PIXEL_MAX_WAIT){
          if (!ready()) log.warn('TriplePixel not ready; giving up queue flush');
          flushQueue();
        }
      }, 150);
    }
  }

  let CART_TOKEN=null;
  async function getCartToken(){
    if (CART_TOKEN) return CART_TOKEN;
    try{
      const r = await fetch('/cart.js', { credentials:'same-origin', cache:'no-store' });
      if (!r.ok) return null;
      const cart = await r.json();
      CART_TOKEN = cart?.token || null;
      return CART_TOKEN;
    } catch { return null; }
  }

  const fpTimes=new Map();
  function makeFP(prod, variant, qty){ return `${prod||'p'}::${variant||'v'}::${qty||1}`; }
  function isDup(prod, variant, qty){
    const now = Date.now(), fp = makeFP(prod, variant, qty);
    const last = fpTimes.get(fp) || 0;
    if (now - last < DEDUP_WINDOW) return true;
    fpTimes.set(fp, now);
    for (const [k,t] of fpTimes) if (now - t > DEDUP_WINDOW*4) fpTimes.delete(k);
    return false;
  }

  let dbgWrap=null;
  function debugPanelInit(){
    if (!SHOW_DEBUG || dbgWrap) return;
    dbgWrap = document.createElement('div');
    dbgWrap.style.cssText = 'position:fixed;z-index:2147483647;bottom:10px;right:10px;width:360px;max-height:50vh;overflow:auto;background:#0b1020;color:#e5f0ff;font:12px/1.4 ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;border:1px solid #2e3a6a;border-radius:8px;box-shadow:0 8px 20px rgba(0,0,0,.35)';
