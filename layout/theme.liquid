          }
        } catch(e){ log.warn('xhr hook error', e); }
      });
      return send.apply(xhr, arguments);
    };
    return xhr;
  }
  window.XMLHttpRequest = PatchedXHR;

  document.addEventListener('submit', async (evt)=>{
    const form = evt.target?.closest("form[action*='/cart/add']");
    if (!form) return;
