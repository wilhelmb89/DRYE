  // Normalisera path: ta bort ev. /xx-xx/ i början + ledande/trailande "/"
  var path = location.pathname
    .replace(/^\/[a-z]{2}-[a-z]{2}\//, '')
    .replace(/^\/+|\/+$/g, '');

  var key = null;
  if (path === HOUSEHOLD_SLUG) key = 'household';
  else if (path === MECHANICS_SLUG) key = 'mechanics';

  if (key) {
    try {
      localStorage.setItem('entryPage', key);
      document.cookie = 'entryPage=' + key + '; path=/; max-age=15552000; SameSite=Lax';
    } catch (e) {}
  }
})();
</script>



