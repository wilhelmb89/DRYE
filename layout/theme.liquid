      const fd = new FormData(form);
      const items = parseItemsFromBody(fd);
      for (const it of items){
        const productId = await resolveProductIdFromVariant(it.variantId);
        if (productId) debugPanelPush({ dir:'~', name:'ATC candidate', payload:{ item: productId, v: it.variantId, q: it.quantity } });
      }
    } catch(e){ log.warn('submit fallback error', e); }
  }, true);

  function debugPanelInit(){/* overwritten above */}
  let dbgWrap=null; // keep refs
  log.info('TW AddToCart interceptor V2 installed');
})();
